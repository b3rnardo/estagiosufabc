<h1>Matrículas</h1>

<table>
  <tr>
    <th>Aluno</th>
    <th>RA</th>
    <th>Código da disciplina</th>
    <th>Nome</th>
    <th>Turno</th>
    <th>Dia</th>
    <th>Horario</th>
    <th>Parecer</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @matriculas.each do |matricula| %>
  <%= form_for(:matricula, :url => {:action =>'update', :id => matricula.id}) do |f| %>
  <tr>
    <td><%= retorna_nome_aluno(matricula.aluno_id)%></td>
    <td><%= retorna_ra(matricula.aluno_id)%></td>
    <td><%= retorna_codigo(matricula.disciplina_id)%></td>
    <td><%= retorna_nome(matricula.disciplina_id) %></td>
    <td>Turno</td>
    <td>Dia</td>
    <td><%= retorna_horario_disciplina(matricula.disciplina_id) %></td>
    <td><%= f.select :situacao,[["Aprovado"],["Reprovado"]] %></td>
    <td><%=f.submit "Enviar"%></td>
  </tr>

<% end %>
<%end%>  
</table>

<br />


